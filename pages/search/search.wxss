/* pages/search/search.wxss */
.top{
  width: 750rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  font-size: 14px;
}
.search{
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 24rpx;
  margin-top: 10rpx;
  background-color: #ffffff;
}
.cancel{
  line-height: 80rpx;
  margin-left: 24rpx;
}
.bookList_view{
  display: flex;
  flex-direction: row;
  margin-top: 16rpx;
  border-bottom: 1px solid #F6F6FA;
  padding-bottom: 16rpx;
  
}
.left{
  width: 200rpx;
  height: 200rpx;
  margin-left:16rpx; 
}
.bookImg{
  width: 100%;
  height: 100%;
}
.mid{
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
}
.bookName{
  color: #383E4A;
  font-size: 18px;
}
.bookPrice{
  color: #ccc;
  font-size: 16px;
  margin-top: 24rpx;
  
}
.bookIntro{
  color: #ccc;
  font-size: 16px;
  margin-top: 24rpx;
  width: 450rpx;
  height: 150rpx;
  overflow-y: hidden;
}